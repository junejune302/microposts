<h1>Sign up</h1>

<div class="form-horizontal" role="form">
    <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages', object: f.object %> <!-- ここを追加 -->

 <div class="form-group">
   <label for="inputname" class="col-md-2 control-label">名前：</label>
    <div class="col-md-10">
      <%= f.text_field :name, class: "form-control" %>
    </div> 
 </div>
 
 <div class="form-group">
   <label for="inputemail" class="col-md-2 control-label">メールアドレス：</label>
    <div class="col-md-10">
      <%= f.text_field :email, class: "form-control" %>
    </div> 
 </div>

 <div class="form-group">
   <label for="inputpassword" class="col-md-2 control-label">パスワード：</label>
   <div class="col-md-10">
      <%= f.password_field :password, class: "form-control" %>
    </div> 
 </div> 

 <div class="form-group">
   <label for="password_confirmation" class="col-md-2 control-label">パスワード(再入力)：</label>
   <div class="col-md-10">
      <%= f.password_field :password_confirmation, class: "form-control" %>
   </div> 
 </div>   

 <div class="form-group">
   <div class="col-md-10">
      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
   </div> 
 </div>  

