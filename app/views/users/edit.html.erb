<h1><%= gravatar_for @user %> 
  <%= @user.name %>さんのプロフィール編集</h1>
  
  <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for(@user) do |f| %>
        
            <%= f.label :name %>
            <%= f.text_field :name %>

            <%= f.label :email %>
            <%= f.text_field :email %>
      
            <%= f.label :location %>
            <%= f.text_field :location %>
      
              <div class="actions">
                <%= f.submit %>
              </div>
        <% end %>
      </div>
</div>
    