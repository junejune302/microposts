<h1><%= gravatar_for @user %> 
  <%= @user.name %>さんのプロフィール編集</h1>
  
  <div class="form-horizontal" role="form">
    <%= form_for(@user) do |f| %>

  <div class="form-group">
   <label for="inputname" class="col-md-2 control-label">名前：</label>
    <div class="col-md-10">
      <%= f.text_field :name, class: "form-control" %>
    </div> 
  </div>

 <div class="form-group">
   <label for="inputemail" class="col-md-2 control-label">メールアドレス：</label>
    <div class="col-md-10">
      <%= f.text_field :email, class: "form-control" %>
    </div> 
 </div>

 <div class="form-group">
   <label for="inputlocation" class="col-md-2 control-label">地域：</label>
    <div class="col-md-10">
      <%= f.text_field :location, class: "form-control" %>
    </div> 
 </div>
      
  <div class="form-group">
   <div class="col-md-10">
      <%= f.submit "Update", class: "btn btn-primary" %>
   </div> 
 </div>
 <% end %>
</div>             
    