<h1>
  <%= gravatar_for @user %>
  <%= @user.name %>
</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(current_user) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>
      
      <%= f.label :location %>
      <%= f.text_field :location %>
        
      <%= f.label :password %>
      <%= f.password_field :password %>


    <% end %>
  </div>
</div>
